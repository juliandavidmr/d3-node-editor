{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "rootDir": "src",
    "moduleResolution": "node",
    "strict": true,
    "useDefineForClassFields": true
  },
  "include": [
    "src/*", "src/pin/pin.ts", "src/editor/editor.ts", "src/output/output.ts", "src/input/input.ts", "src/node/node.ts"
  ]
}